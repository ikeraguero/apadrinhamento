// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Child {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  photo             String?
  name              String
  gender            String?
  school            String?
  age               String
  address           String?
  city              String
  state             String
  cpf               String          @unique
  description       String?
}

model School {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String 
  cnpj      String @unique
  cellphone String?
  photo     String?
  name      String
  address   String?
  city      String
  state     String

}

model Donation {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  donatortype   String
  donator       String
  email         String
  cpf           String? @unique
  cnpj          String? @unique
  cellphone     String?
  type          String
  value         String?
  materials     String
  donatedto     String?
  data          DateTime @default(now())
}
